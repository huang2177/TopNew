<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black_5a5a5a"
    android:id="@+id/rl_comment_item"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/black_bg"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12sp"
            android:src="@mipmap/icon_comment"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:id="@+id/ci_head"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="12dp"
            tools:src="@mipmap/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/yellow_DEAC6A"
            android:layout_toRightOf="@+id/ci_head"
            android:layout_marginTop="10dp"
            tools:text="Nice"
            android:layout_marginLeft="6dp"
            android:id="@+id/tv_nickname"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            tools:text="2016n年"
            android:id="@+id/tv_time"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_nickname"
            android:layout_below="@+id/tv_nickname"
            android:layout_marginTop="6dp"
            tools:text="你个贱人啊"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="14dp"
            android:id="@+id/tv_content"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black_585858"
            android:layout_below="@+id/tv_content"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="34dp"
            />

    </RelativeLayout>

</RelativeLayout>