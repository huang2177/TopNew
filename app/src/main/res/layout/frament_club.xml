<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg"
    android:clickable="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />


    <RadioGroup
        android:id="@+id/radio_group_two"
        style="@style/top_radio_group"
        android:clickable="false">

        <RadioButton
            android:id="@+id/rb_left"
            style="@style/top_radio_button"
            android:background="@drawable/rb_top_left"
            android:checked="true"
            android:text="我的社团" />

        <RadioButton
            android:id="@+id/rb_right"
            style="@style/top_radio_button"
            android:background="@drawable/rb_top_right"
            android:text="所有社团" />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/frame_layout_two"
        style="@style/frame_layout_content"></FrameLayout>

</LinearLayout>