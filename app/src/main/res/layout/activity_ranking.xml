<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_bg"
    android:orientation="vertical">


    <include layout="@layout/layout_title" />

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/ranking_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:xTabDisplayNum="2"
        app:xTabIndicatorColor="#e7c420"
        app:xTabIndicatorHeight="2dp"
        app:xTabIndicatorWidth="120dp"
        app:xTabSelectedTextColor="#e7c420"
        app:xTabSelectedTextSize="16.0sp"
        app:xTabTextColor="#333333"
        app:xTabTextSize="16.0sp"

        />


    <android.support.v4.view.ViewPager
        android:id="@+id/ranking_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>