<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@android:color/transparent"
              android:padding="12.4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/only_radius10dp_shape"
        android:orientation="vertical">

        <Button
            android:id="@+id/select_photo_camera_bt"
            style="@style/mydata_select_photo"
            android:text="拍摄" />

        <View android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/color_e8e8e8"
            />

        <Button
            android:id="@+id/select_photo_local_bt"
            style="@style/mydata_select_photo"
            android:text="从手机相册中选择" />
    </LinearLayout>
    <Button
        android:id="@+id/tv_cancel"
        style="@style/mydata_select_photo"
        android:layout_marginTop="7.1dp"
        android:background="@drawable/only_radius10dp_shape"
        android:textColor="#ff0000"
        android:text="取消"/>
</LinearLayout>
