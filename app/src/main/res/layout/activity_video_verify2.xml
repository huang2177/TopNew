<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/image_bg"
    >

    <com.cjt2325.cameralibrary.JCameraView
        android:id="@+id/jcamera_view"
        android:layout_width="230dp"
        android:layout_height="300dp"
        app:duration_max="6000"
        app:iconLeft="@color/transparent"
        app:iconMargin="20dp"
        app:iconSize="30dp"
        app:iconSrc="@drawable/ic_camera"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"

        >

        <include layout="@layout/layout_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="TOP是一个100%全真人的社交平台"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:id="@+id/tv_hint1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="所有人都需要经过视频验证"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:id="@+id/tv_hint2"
            />

        <TextView
            android:id="@+id/tv_random_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/yellow_E7C375"
            android:textSize="30sp"
            tools:text="3065"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_start"
            style="@style/tv_confirm"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="390dp"
            android:text="开始视频认证" />

        <TextView
            android:id="@+id/tv_hint3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="整理好自己的妆容会提升审核通过率哦"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </LinearLayout>


</RelativeLayout>