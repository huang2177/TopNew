<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/home_item_iamge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lable1"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:background="@drawable/shape_age_bg"
                        android:gravity="center_horizontal|center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="22岁"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_lable2"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_city_bg"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="上海 "
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_lable3"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_xz_bg"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="天蝎座"
                        android:textColor="@color/white"
                        android:textSize="12sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/home_item_state"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:alpha="0.5"
                    android:background="@drawable/shape_state_bg"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="在线"
                    android:textColor="#15d118"
                    android:textSize="12sp" />


            </LinearLayout>


            <ImageView
                android:id="@+id/home_item_ranking"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="72dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_home_ranking" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/home_item_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="你喜欢的样子我都有"
                        android:textColor="@color/white"
                        android:textSize="14.0sp" />


                    <ImageView
                        android:id="@+id/staricon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/home_staricon" />

                    <ImageView
                        android:id="@+id/staricon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/home_staricon" />

                    <ImageView
                        android:id="@+id/staricon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/home_staricon" />

                    <ImageView
                        android:id="@+id/staricon4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/home_staricon" />

                    <ImageView
                        android:id="@+id/staricon5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:src="@drawable/home_staricon" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/home_item_tv1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="你喜欢的样子我都有，，，，，，"
                        android:textColor="@color/white"
                        android:textSize="14.0sp" />


                    <TextView
                        android:id="@+id/home_item_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_home_videoicon"
                        android:drawablePadding="10dp"
                        android:gravity="right"
                        android:paddingBottom="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="14.0sp" />


                </LinearLayout>


            </LinearLayout>


        </FrameLayout>


    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>