<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_606060"
    android:paddingTop="2dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:id="@+id/rl_type3_one"
        >
        <ImageView
            android:id="@+id/iv_type3_image1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_type3_name1"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:textSize="9dp"
                android:textColor="@color/white"
                />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                />

            <TextView
                android:id="@+id/tv_type3_gift1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:textSize="9dp"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:id="@+id/rl_type3_two"
        >
        <ImageView
            android:id="@+id/iv_type3_image2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_type3_name2"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:textSize="9dp"
                android:textColor="@color/white"
                />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                />

            <TextView
                android:id="@+id/tv_type3_gift2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:textSize="9dp"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:id="@+id/rl_type3_three"
        >
        <ImageView
            android:id="@+id/iv_type3_image3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_type3_name3"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:textSize="9dp"
                android:textColor="@color/white"
                />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                />

            <TextView
                android:id="@+id/tv_type3_gift3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:textSize="9dp"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>