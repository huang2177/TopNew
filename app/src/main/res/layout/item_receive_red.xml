<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/black_5a5a5a"
    android:id="@+id/rl_item"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_head"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ci_head"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/ci_head"
        android:textColor="@color/yellow_DEAC6A"
        android:textSize="15sp"
        tools:text="Andy" />

    <ImageView
        android:id="@+id/iv_vip"
        android:layout_width="14dp"
        android:layout_height="12dp"
        android:layout_alignTop="@+id/tv_nickname"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/tv_nickname"
        tools:src="@mipmap/icon_vip1_s" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ci_head"
        android:layout_alignLeft="@+id/tv_nickname"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="Andy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/yellow_DEAC6A"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        tools:text="160"
        android:id="@+id/tv_amount_num"

        />
    
    <ImageView
        android:layout_width="27dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_red_packet"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_amount_num"
        android:layout_marginRight="4dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black_888888"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        />

</RelativeLayout>