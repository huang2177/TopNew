<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/status_color"
    android:clickable="true"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/radio_group_three"
        style="@style/top_radio_group"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rb_three_left"
            style="@style/top_radio_button"
            android:background="@drawable/rb_top_left"
            android:checked="true"
            android:text="离我最近" />

        <RadioButton
            android:id="@+id/rb_three_center"
            style="@style/top_radio_button"
            android:background="@drawable/rb_top_center"
            android:text="最近活跃" />

        <RadioButton
            android:id="@+id/rb_three_right"
            style="@style/top_radio_button"
            android:background="@drawable/rb_top_right"
            android:text="最新加入" />

    </RadioGroup>




    <LinearLayout
        android:id="@+id/home_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/home_tuijian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/home_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="推荐"
                    android:textColor="@color/white"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/home_tj_lab"
                    android:layout_width="42dp"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shape_white_4dp" />

            </RelativeLayout>


        </LinearLayout>


        <View
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/home_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/home_city_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="城市选择"
                    android:textColor="@color/light_black"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/home_city_lab"
                    android:layout_width="42dp"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_white_4dp" />

            </RelativeLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/image_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:src="@drawable/ic_home_sx" />


    </LinearLayout>


    <FrameLayout
        android:id="@+id/frame_layout_three"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>