<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/status_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="上传头像"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/girl_head"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_add_iamge" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:layout_marginTop="30dp"
                android:background="#333" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="上传最近三张照片"
                android:textColor="@color/colorWhite"
                android:textSize="16.0sp" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/girl_recylerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:layout_marginTop="10dp"
                android:background="#333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="昵称"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/girl_et_nikename"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_login_info"
                android:gravity="center"
                android:hint="请填写昵称"
                android:paddingLeft="12dp"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textColorHint="#828282"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:layout_marginTop="10dp"
                android:background="#333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="微信号"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/girl_et_wechat"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/et_login_info"
                android:gravity="center"
                android:hint="请填写微信号"
                android:paddingLeft="12dp"
                android:singleLine="true"
                android:textColor="@color/colorWhite"
                android:textColorHint="#828282"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="微信号仅用于身份认证"
                android:textColor="#999"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:layout_marginTop="10dp"
                android:background="#333" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="个人资料"
                android:textColor="@color/colorWhite"
                android:textSize="16.0sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="#333" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="身高："
                    android:textColor="#999"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/girl_hight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_bk"
                    android:text="请选择"
                    android:textColor="@color/yellow_DEAC6A"
                    android:textSize="14.0sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="#333" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="体重："
                    android:textColor="#999"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/girl_wight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_bk"
                    android:text="请选择"
                    android:textColor="@color/yellow_DEAC6A"
                    android:textSize="14.0sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="#333" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="年龄："
                    android:textColor="#999"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/girl_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_bk"
                    android:text="请选择"
                    android:textColor="@color/yellow_DEAC6A"
                    android:textSize="14.0sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="#333" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="职业："
                    android:textColor="#999"
                    android:textSize="14.0sp" />

                <EditText
                    android:id="@+id/girl_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_bk"
                    android:hint="请输入"
                    android:textColor="@color/yellow_DEAC6A"
                    android:textColorHint="@color/yellow_DEAC6A"
                    android:textSize="14.0sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="#333" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="兴趣爱好："
                    android:textColor="#999"
                    android:textSize="14.0sp" />

                <EditText
                    android:id="@+id/girl_aihao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_bk"
                    android:hint="请输入"
                    android:textColor="@color/yellow_DEAC6A"
                    android:textColorHint="@color/yellow_DEAC6A"
                    android:textSize="14.0sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="#333" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="才艺优点："
                    android:textColor="#999"
                    android:textSize="14.0sp" />

                <EditText
                    android:id="@+id/girl_caiyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_bk"
                    android:hint="请输入"
                    android:textColor="@color/yellow_DEAC6A"
                    android:textColorHint="@color/yellow_DEAC6A"
                    android:textSize="14.0sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="#333" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="个性签名："
                    android:textColor="#999"
                    android:textSize="14.0sp" />

                <EditText
                    android:id="@+id/girl_qianmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_bk"
                    android:hint="请输入"
                    android:textColor="@color/yellow_DEAC6A"
                    android:textColorHint="@color/yellow_DEAC6A"
                    android:textSize="14.0sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5px"
                android:background="#333" />

            <TextView
                android:id="@+id/girl_into"
                android:layout_width="282dp"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/shape_yellow_login"
                android:gravity="center"
                android:text="下一步 "
                android:textColor="@color/yellow_DEAC6A"
                android:textSize="16sp" />


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>