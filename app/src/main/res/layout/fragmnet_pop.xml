<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_bg"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginTop="50dp">

                    <TextView
                        android:id="@+id/tv_ranking_no1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/ic_no1"
                        android:gravity="center"
                        android:text="NO .1"
                        android:textColor="@color/colorWhite" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_phb_hade" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ranking_no1_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="25dp"
                        android:src="@drawable/ic_head" />

                    <TextView
                        android:id="@+id/ranking_no1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="9dp"
                        android:text="qewqeqe"
                        android:textColor="@color/colorWhite"
                        android:textSize="12.0sp" />
                </FrameLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_hg" />

                <TextView
                    android:id="@+id/ranking_no1_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="10dp"
                    android:drawableLeft="@drawable/ic_xz"
                    android:drawablePadding="10dp"
                    android:text="dasda"
                    android:textColor="@color/colorWhite" />
            </FrameLayout>


            <com.kw.top.view.XListView
                android:id="@+id/ranking_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" />
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>