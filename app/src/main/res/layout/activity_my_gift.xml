<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_bg"
        android:orientation="vertical"
        android:paddingLeft="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="现拥有礼券"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_all_liquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:layout_marginTop="38dp"
            android:text="0"
            android:textColor="@color/yellow_DEAC6A"
            android:textSize="70sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_5a5a5a"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_receive_gift"
            style="@style/rl_cenetr"
            android:layout_height="59dp">

            <TextView
                style="@style/tv_center_left"
                android:text="我收到的礼物" />

            <TextView
                android:id="@+id/tv_receive_gift"
                style="@style/tv_center_right"
                android:text="总计：" />

            <ImageView style="@style/iv_center_right" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />

        <RelativeLayout
            android:id="@+id/rl_receive_red_packet"
            style="@style/rl_cenetr"
            android:layout_height="59dp">

            <TextView
                style="@style/tv_center_left"
                android:text="我收到的红包" />

            <TextView
                android:id="@+id/tv_receive_red"
                style="@style/tv_center_right"
                android:text="总计："
                android:drawableRight="@mipmap/icon_diamond_small"
                android:layout_marginRight="20dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"

                />

            <ImageView style="@style/iv_center_right" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>